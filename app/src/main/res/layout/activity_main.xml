<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ms.checkbox.CheckBoxGroupView
        android:id="@+id/checkTextGroupView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:cb_checkModel="SIMPLE"
        app:cb_checkedFillColor="#2588E9"
        app:cb_checkedStrokeColor="#2588E9"
        app:cb_checkedTextColor="#ffffff"
        app:cb_groupHeight="32dp"
        app:cb_groupWidth="60dp"
        app:cb_lineHeight="15dp"
        app:cb_strokeWidth="1dp"
        app:cb_radius="4dp"
        app:cb_textGapWidth="15dp"
        app:cb_textSize="13sp"
        app:cb_unCheckedFillColor="#ffffff"
        app:cb_unCheckedStrokeColor="#999999"
        app:cb_unCheckedTextColor="#333333" />

</LinearLayout>
