<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.checkbox.CheckBoxGroupView
        android:id="@+id/checkTextGroupView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:cb_checkModel="SIMPLE"
        app:cb_checkedStrokeColor="@color/colorPrimary"
        app:cb_checkedTextColor="#009EF2"
        app:cb_lineHeight="16dp"
        app:cb_strokeModel="FILL_FILL"
        app:cb_strokeWidth="1px"
        app:cb_tagRadius="5dp"
        app:cb_textGapWidth="8dp"
        app:cb_textPaddingButtom="8dp"
        app:cb_textPaddingLeft="12dp"
        app:cb_textPaddingRight="12dp"
        app:cb_textPaddingTop="8dp"
        app:cb_textSize="14sp"
        app:cb_unCheckedStrokeColor="@color/colorAccent"
        app:cb_unCheckedTextColor="#66000000" />

</LinearLayout>
